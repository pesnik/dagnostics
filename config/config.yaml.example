app:
  name: "DAGnostics"
  version: "0.1.0"
  description: "DAG monitoring and diagnostics system"

monitoring:
  interval: 60

  log_path: "/var/log/airflow"

  patterns:
    - "*.log"
    - "dag_*.log"
    - "scheduler.log"

  error_patterns:
    - "ERROR"
    - "CRITICAL"
    - "Failed"
    - "Exception"

  retry:
    max_attempts: 3
    backoff_factor: 2
    timeout: 30

reporting:
  format: "json"

  output_dir: "./reports"

  frequency: "daily"

  email:
    enabled: false
    smtp_server: "localhost"
    smtp_port: 587
    username: ""
    password: ""
    recipients: []

  slack:
    enabled: false
    webhook_url: ""
    channel: "#alerts"

database:
  enabled: false
  type: "sqlite"  # sqlite, postgresql, mysql
  host: "localhost"
  port: 5432
  name: "dagnostics"
  username: ""
  password: ""

api:
  enabled: true
  host: "0.0.0.0"
  port: 8080
  debug: false

log_level: "INFO"
